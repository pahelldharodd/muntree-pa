---
// This page is available at /admin-dashboard
import Layout from "../layouts/Layout.astro";
---

<Layout title="Admin Dashboard">
  <main>
    <div class="dashboard-container">
      <h1 class="heading">Welcome, Admin üëã</h1>
      <div class="button-group">
        <a href="/admin-links" class="btn primary-btn">üîó Manage Links</a>
        <!-- <a href="/admin-profile" class="btn primary-btn">‚öôÔ∏è Profile/Settings</a> -->
        <button id="logoutBtn" class="btn danger-btn">üö™ Logout</button>
      </div>
    </div>
  </main>
</Layout>

<style>
  body {
    background-color: #e7ebf0;
    font-family: "Segoe UI", sans-serif;
    margin: 0;
  }

  .dashboard-container {
    max-width: 480px;
    margin: 4rem auto;
    padding: 2rem;
    background-color: #ffffff;
    border-radius: 16px;
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
    text-align: center;
    transition: transform 0.2s;
  }

  .heading {
    font-size: 1.8rem;
    font-weight: 600;
    color: #1e2a78;
    margin-bottom: 2rem;
  }

  .button-group {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .btn {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    font-size: 1rem;
    font-weight: 500;
    border: none;
    border-radius: 8px;
    text-decoration: none;
    cursor: pointer;
    transition:
      background-color 0.3s,
      transform 0.2s;
  }

  .btn:active {
    transform: scale(0.98);
  }

  .primary-btn {
    background-color: #1e2a78;
    color: #ffffff;
  }

  .primary-btn:hover {
    background-color: #17205d;
  }

  .danger-btn {
    background-color: #d9534f;
    color: #ffffff;
  }

  .danger-btn:hover {
    background-color: #c9302c;
  }
</style>

<script>
  if (!localStorage.getItem("access_token")) {
    window.location.href = "/admin-login";
  }

  document.addEventListener("DOMContentLoaded", () => {
    const logoutBtn = document.getElementById("logoutBtn");
    logoutBtn?.addEventListener("click", () => {
      localStorage.removeItem("access_token");
      window.location.href = "/admin-login";
    });
  });
</script>
